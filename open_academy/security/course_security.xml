<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="course_group_manager" model="res.groups">
        <field name="name">OpenAcademy / Manager</field>
    </record>

    <record id="course_rule_manager" model="ir.rule">
        <field name="name">You need to be the responsible to modify it</field>
        <field name="model_id" ref="model_course"/>
        <field name="groups" eval="[Command.link(ref('open_academy.course_group_manager'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True" />
        <field name="domain_force">['|',('responsible_id','=',user.id),('responsible_id','=',False)]</field>
    </record>
</odoo>
