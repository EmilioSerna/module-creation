<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="session_view_dashboard" model="ir.ui.view">
        <field name="name">session.view.dashboard</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <board style="1-2">
                    <column>
                        <action string="Sessions" name="%(session_list_display_action)d" />
                        <action string="Attendees per Course" name="%(session_graph_display_action)d" />
                    </column>
                    <column>
                        <action string="Sessions" name="%(session_calendar_display_action)d" />
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="session_dashboard_action" model="ir.actions.act_window">
        <field name="name">Session Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="session_view_dashboard" />
    </record>

    <menuitem id="session_dashboard_menu" sequence="1"
    action="session_dashboard_action" parent="open_academy_root_menu"/>
</odoo>
