<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attendee_wizard_view_form" model="ir.ui.view">
        <field name="name">attendee.wizard.view.form</field>
        <field name="model">attendee.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="session_ids" />
                <field name="attendee_ids" />
                <footer>
                    <button name="add_attendees" type="object" string="Add Attendees" class="oe_highlight" />
                    <button special="cancel" string="Discard" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_action" model="ir.actions.act_window">
        <field name="name">Add Attendees</field>
        <field name="res_model">attendee.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_session"/>
    </record>
</odoo>
